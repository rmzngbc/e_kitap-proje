         @if (Model.yazarlar.Count>0)
         {   
           

           <div class="col-md-8">
               
            <div class="row">
                <h1>Kitapları:</h1>
            </div>
         

              <div class="row">


                   
                        

                        @foreach (var item in @Model.yazarlar)
                        {
                            @foreach (var itemA in item.kitapyazarlar)
                            {   

                                <div class="col-md-3">
                                    <div class="card mb-2">
                                            <img class="card-img-top" src="~/img/@itemA.kitap.k_resim" alt="">
                                            <div class="card-body">
                                                <h5 class="card-title">@itemA.kitap.k_adi</h5>
                                                <small class="text-muted">
                                                    <i class="fas fa-lira-sign"></i>fiyat:@itemA.kitap.k_fiyat tl
                                                </small>
                                            </div>
                                        
                                            <div class="card-footer text-center">
                                                <a asp-controller="ekitapislem" asp-action="details" asp-route-url="@itemA.kitap.Url" class="btn btn-primary btn-sm mb-2">incele</a>
                                                <a class="btn btn-primary btn-sm">sepete ekle</a>
                                            </div>
                                        </div>
                                </div>
                            }

                        }   

                    




                   
           
               </div>
          </div>

