
@model kitap



<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.k_resim" class="img-fluid">
    </div>
    <div class="col-md-9">                
            <h1 class="mb-3">Kitap Adı:@Model.k_adi</h1> <hr>
            @foreach (var item in Model.kitapyazarlar)
            {
                <h4 class="mb-3">Kitap Yazar:@item.yazar.yazarad @item.yazar.yazarsoyad</h4> 
            }
            
            <a href="/kitaplar/@Model.kategori.Url" class="btn btn-link p-0 mb-3">Kategori:@Model.kategori.ka_adi</a>                  
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>Fiyat:@Model.k_fiyat tl
                </h4>
                
                <form asp-controller="Sepet" asp-action="AddToSepet" method="POST" class="form-inline">
                    <input type="hidden" name="kitapId" value="@Model.kitapId">
                    
                    <div class="input-group mb-3">
                        <input type="number" name="adet" class="form-control" value="1" min="1" step="1" style="width: 100px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i>Sepete Ekle                                
                            </button>
                        </div>
                    </div>     
               
                </form>





               
            </h6>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">Açıklama:@Html.Raw(Model.k_aciklama)</p>
    </div>
</div>