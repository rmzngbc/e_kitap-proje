
@model KategoriModel



<div class="row">
  
    <div class="col-md-8">
         <h1 class="h3">Kategori Ekle</h1>
        <hr> 
        <form asp-controller="Admin" asp-action="KategoriEkle" method="POST">
        <div class="form-group row">
            <label asp-for="ka_adi" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control ml-5" asp-for="ka_adi">
                <span asp-validation-for="ka_adi" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Url" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control ml-5" asp-for="Url">
                 <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>       
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary ml-5">Kategori Ekle</button>
            </div>
        </div>
    </form>
    </div>
</div>



@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
    